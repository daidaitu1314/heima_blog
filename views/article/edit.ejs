<?- include('../layouts/header.ejs') ?>

  <form id="articleForm" style="padding:5px;">
    <h1>编辑文章</h1>
    <div class="form-group">
      <label for="">文章标题：</label>
      <input type="hidden" name="id" value="<?= article.id ?>">
      <input type="text" name="title" class="form-control" maxlength="30" required value="<?= article.title ?>">
    </div>

    <div class="form-group">
      <label for="">文章内容：</label>
      <textarea name="content" rows="20" class="form-control" required><?= article.content ?></textarea>
    </div>

    <input type="submit" value="保存文章" class="btn btn-primary pull-right">
  </form>

  <script>
    $('#articleForm').on('submit', function (e) {
      e.preventDefault();
      $.ajax({
        url: '/article/edit',
        data: $(this).serialize(),
        type: 'post',
        dataType: 'json',
        success: function (result) {
          if (result.err_code === 0) {
            location.href = '/article/info?id=<?= article.id ?>';
          } else {
            alert(result.msg);
          }
        }
      });
    });
  </script>

